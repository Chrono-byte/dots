{
    "workbench.colorTheme": "Better Selenized Light",
    "files.simpleDialog.enable": true,
    "vscord.app.name": "Cursor",
    "vscord.status.idle.disconnectOnIdle": true,
    "workbench.sideBar.location": "right",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "boundary",
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/target": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/target": true
    },
    "breadcrumbs.enabled": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[toml]": {
        "editor.defaultFormatter": "tombi-toml.tombi"
    },
    "update.mode": "none",
    "gitlens.ai.model": "gitkraken",
    "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
    "workbench.preferredDarkColorTheme": "Better Selenized Dark",
    "workbench.preferredLightColorTheme": "Better Selenized Light",
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    }
}
